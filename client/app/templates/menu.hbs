{{page-title "Menu - Restaurant"}}
{{!-- Navbar Top --}}
<Navbar @isMenu="true" />

{{#if this.session.isLogin }}

{{#if this.isMenuEmpty }}
<div class="container" style="display: flex; justify-content: center; align-items: center; height: 50vh;">
    <div class="row text-center">
      <div class="progress m-3">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
      </div>

      <h1>Menu Empty! <br> We are Closed</h1>

      <div class="progress m-3">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
      </div>
    </div>
</div>
{{else}}

{{!-- List Menu --}}
<div class="container">
  <section class="mt-3 mb-3">
    <div class="accordion" id="menu">
      {{!-- Package --}}
      {{#if this.menuPackage.length}}
      <div class="accordion-item">
        <h2 class="accordion-header" id="package">
          <button class="accordion-button bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            <h4>Package</h4>
          </button>
        </h2>
        <div class="accordion-collapse collapse show" id="collapseOne" aria-labelledby="package" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            {{!-- Mode Web Tablet --}}
            <div class="card-group align-items-center mode-web-tablet" style="grid-gap: 10px;" id="Package">
              {{#each this.menuPackage as |menu|}}
                <MenuCard
                @menu={{menu}}
                />
              {{/each}}
            </div>

            {{!-- Mode Mobile --}}
            <div class="list-group mode-mobile align-items-center" style="grid-gap: 10px;" id="Package">
              {{#each this.menuPackage as |menu|}}
                <MenuList
                @menu={{menu}}
                />
              {{/each}}
            </div>

          </div>
        </div>
      </div>
      {{/if}}

      {{!-- Foods --}}
      {{#if this.menuFoods.length}}
      <div class="accordion-item">
        <h2 class="accordion-header" id="foods">
          <button class="accordion-button bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            <h4>Foods</h4>
          </button>
        </h2>
        <div class="accordion-collapse collapse show" id="collapseTwo" aria-labelledby="foods" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            {{!-- Mode Web Tablet --}}
            <div class="card-group align-items-center mode-web-tablet" style="grid-gap: 10px;" id="Foods">
              {{#each this.menuFoods as |menu|}}
                <MenuCard
                @menu={{menu}}
                />
              {{/each}}
            </div>

            {{!-- Mode Mobile --}}
            <div class="list-group mode-mobile align-items-center" style="grid-gap: 10px;" id="Foods">
              {{#each this.menuFoods as |menu|}}
                <MenuList
                @menu={{menu}}
                />
              {{/each}}
            </div>

          </div>
        </div>
      </div>
      {{/if}}

      {{!-- Drinks --}}
      {{#if this.menuDrinks.length}}
      <div class="accordion-item">
        <h2 class="accordion-header" id="drinks">
          <button class="accordion-button bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            <h4>Drinks</h4>
          </button>
        </h2>
        <div class="accordion-collapse collapse show" id="collapseThree" aria-labelledby="drinks" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            {{!-- Mode Web Tablet --}}
            <div class="card-group align-items-center mode-web-tablet" style="grid-gap: 10px;" id="Drinks">
              {{#each this.menuDrinks as |menu|}}
                <MenuCard
                @menu={{menu}}
                />
              {{/each}}
            </div>

            {{!-- Mode Mobile --}}
            <div class="list-group mode-mobile align-items-center" style="grid-gap: 10px;" id="Drinks">
              {{#each this.menuDrinks as |menu|}}
                <MenuList
                @menu={{menu}}
                />
              {{/each}}
            </div>

          </div>
        </div>
      </div>
      {{/if}}
      
      {{!-- Alacarte --}}
      {{#if this.menuAlacarte.length}}
      <div class="accordion-item">
        <h2 class="accordion-header"  id="alacarte">
          <button class="accordion-button bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
            <h4 class="text-black">Alacarte</h4>
          </button>
        </h2>
        <div class="accordion-collapse collapse show" id="collapseFour" aria-labelledby="alacarte" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            {{!-- Mode Web Tablet --}}
            <div class="card-group align-items-center mode-web-tablet" style="grid-gap: 10px;" id="Alacarte">
              {{#each this.menuAlacarte as |menu|}}
                <MenuCard
                @menu={{menu}}
                />
              {{/each}}
            </div>

            {{!-- Mode Mobile --}}
            <div class="list-group mode-mobile align-items-center" style="grid-gap: 10px;" id="Alacarte">
              {{#each this.menuAlacarte as |menu|}}
                <MenuList
                @menu={{menu}}
                />
              {{/each}}
            </div>

          </div>
        </div>
      </div>
      {{/if}}

    </div>
  </section>
</div>

{{/if}}

{{else}}
<div class="container" style="display: flex; justify-content: center; align-items: center; height: 50vh;">
    <div class="row text-center">
      <div class="progress m-3">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
      </div>

      <h3>You need Login First!</h3>
      <LinkTo @route="login">
        <button class="btn btn-primary fa-beat" style="--fa-beat-scale: 1.1; --fa-animation-duration: 3s;" type="submit">
          <i class="fa-solid fa-utensils"></i> Login
        </button>
      </LinkTo>

      <div class="progress m-3">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
      </div>
    </div>
</div>
{{/if}}

{{!-- Spacer Bottom --}}
<div class="spacer-bottom"></div>

{{!-- Navbar Bottom --}}
<NavbarBottom 
  @isMenu="true"
/>
