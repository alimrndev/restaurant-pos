{{page-title "Menu - Restaurant"}}
{{!-- Navbar Top --}}
<Navbar @isMenu="true" />

{{!-- List Menu --}}
<div class="container">
  <section class="mt-3 mb-3">
    <div class="accordion" id="menu">
      {{!-- Package --}}
      <div class="accordion-item">
        <h2 class="accordion-header" id="package">
          <button class="accordion-button bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            <h4>Package</h4>
          </button>
        </h2>
        <div class="accordion-collapse collapse show" id="collapseOne" aria-labelledby="package" data-bs-parent="#accordionExample">
          <div class="accordion-body">

            {{!-- Mode Web Tablet --}}
            <div class="card-group align-items-center mode-web-tablet" style="grid-gap: 10px;" id="Package">
              {{#each this.menuPackage as |menu|}}
                <MenuCard
                @picture={{menu.picture}}
                @name={{menu.name}}
                @description={{menu.description}}
                @price={{menu.price}}
                @qty={{menu.count}}
                />
              {{/each}}
            </div>

            {{!-- Mode Mobile --}}
            <div class="list-group mode-mobile align-items-center" style="grid-gap: 10px;" id="Package">
              {{#each this.menuPackage as |menu|}}
                <MenuList
                @picture={{menu.picture}}
                @name={{menu.name}}
                @description={{menu.description}}
                @price={{menu.price}}
                />
              {{/each}}
            </div>

          </div>
        </div>
      </div>

      {{!-- Foods --}}
